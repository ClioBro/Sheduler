<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:models="clr-namespace:ProjectShedule.Shedule.Models"
             x:Class="ProjectShedule.Shedule.PackNotesManager.FilterManager.Views.RadioButtonsView"
             xmlns:local="clr-namespace:ProjectShedule.Shedule.PackNotesManager.FilterManager.Views" 
             x:DataType="local:RadioButtonsView">
    <ContentView.Resources  xmlns:resources="clr-namespace:ProjectShedule.Shedule.Resources">
        <resources:RadioButton x:Key="mainPageResource"/>
    </ContentView.Resources>
  <ContentView.Content>
      <StackLayout 
          BindableLayout.ItemsSource="{Binding RadioButtonItems}"
          Orientation="{Binding Orientation}"
          Spacing="0"
          RadioButtonGroup.GroupName="Group"
          RadioButtonGroup.SelectedValue="{Binding SelectedItem}"
          >
          <BindableLayout.ItemTemplate >
              <DataTemplate x:DataType="models:RadioButtonItem">
                  <RadioButton 
                      Content="{Binding Text}"
                      IsChecked="{Binding IsChecked}" 
                      Value="{Binding This}"/>
              </DataTemplate>
          </BindableLayout.ItemTemplate>
      </StackLayout>
  </ContentView.Content>
</ContentView>