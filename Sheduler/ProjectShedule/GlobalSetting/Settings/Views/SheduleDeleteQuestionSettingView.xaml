<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels ="clr-namespace:ProjectShedule.GlobalSetting.Settings.ViewModels"
             xmlns:views="clr-namespace:ProjectShedule.GlobalSetting.Views"
             x:Class="ProjectShedule.GlobalSetting.Settings.SheduleNotesDelete.Views.SheduleDeleteQuestionSettingView"
             x:DataType="viewModels:SheduleDeleteSettingViewModel">
  <ContentView.Content>
      <Grid 
          RowSpacing="0" 
          BackgroundColor="{DynamicResource ViewBackgroundColor}">
          <Label 
              Grid.Row="0"
              Text="{Binding Header}"
              Style="{DynamicResource MediumLabelStyle}"/>
          <views:SwitchSettingView 
              Grid.Row="1"
              BindingContext="{Binding DeleteSwitchQuestionSetting}"/>
        </Grid>
  </ContentView.Content>
</ContentView>