<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ProjectShedule.GlobalSetting.Settings.ViewModels"
             xmlns:views="clr-namespace:ProjectShedule.GlobalSetting.Views"
             x:Class="ProjectShedule.GlobalSetting.Settings.AppTheme.Views.ThemeSettingView"
             x:DataType="viewModels:ThemeSettingViewModel">
  <ContentView.Content>
      <Grid 
          RowSpacing="0" 
          BackgroundColor="{DynamicResource ViewBackgroundColor}" >
          <Label 
              Grid.Row="0"
              Text="{Binding Header}"
              Style="{DynamicResource MediumLabelStyle}"/>
          <StackLayout 
              Grid.Row="1"
              CompressedLayout.IsHeadless="True">
              <views:SwitchSettingView BindingContext="{Binding ThemeSwitchSetting}"/>
          </StackLayout>
      </Grid>
  </ContentView.Content>
</ContentView>