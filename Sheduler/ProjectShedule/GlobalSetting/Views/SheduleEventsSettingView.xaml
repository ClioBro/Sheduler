<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ProjectShedule.GlobalSetting.Views"
             xmlns:viewmodels="clr-namespace:ProjectShedule.GlobalSetting.ViewModels"
             x:Class="ProjectShedule.GlobalSetting.Views.SheduleEventsSettingView"
             x:DataType="viewmodels:SheduleEventsSettingViewModel">
  <ContentView.Content>
        <Grid BackgroundColor="{DynamicResource ViewBackgroundColor}">
            <Label 
                Grid.Row="0" 
                Text="{Binding Title}" 
                Style="{DynamicResource MediumLabelStyle}" 
                VerticalOptions="Start"/>
            <StackLayout 
                Grid.Row="1" 
                VerticalOptions="Start"
                CompressedLayout.IsHeadless="True">
                <views:littleSettingView MainText="{Binding OpacityText}" Value="{Binding Opacity}" MinValue="{Binding MinOpacity}" MaxValue="{Binding MaxOpacity}"/>
                <views:littleSettingView MainText="{Binding CornerRadiusText}" Value="{Binding CornerRadius}" MinValue="{Binding MinCornerRadius}" MaxValue="{Binding MaxCornerRadius}"/>
            </StackLayout>
        </Grid>
  </ContentView.Content>
</ContentView>