<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectShedule.GlobalSetting.Views.CustomStepperView"
             xmlns:local="clr-namespace:ProjectShedule.GlobalSetting.Views"
             x:DataType="local:CustomStepperView"
             x:Name="thisClass">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal">
            <Label Text="{Binding MainText, Source={x:Reference thisClass}}"/>
            <Label Text="{Binding InfoText, Source={x:Reference thisClass}}"/>
            <Button 
                x:Name="minusButton"
                Text="-" Clicked="MinusValue" />
            <Button
                x:Name="pluseButton"
                Text="+" Clicked="PluseValue"/>
       </StackLayout>
  </ContentView.Content>
</ContentView>